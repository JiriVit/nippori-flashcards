<Window x:Class="NipporiWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NipporiWpf"
        mc:Ignorable="d"
        Title="Nippori" Height="450" Width="800" 
        WindowStartupLocation="CenterScreen"
        KeyDown="Window_KeyDown">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Button Content="Load" Click="ButtonLoad_Click" />
        </ToolBar>
        <StatusBar DockPanel.Dock="Bottom">
            <ProgressBar Width="100" Height="18" Visibility="{Binding ProgressBarVisibility}" IsIndeterminate="True"/>
            <TextBox Text="{Binding OpenedFileName, FallbackValue='no file loaded'}" IsReadOnly="True"/>
        </StatusBar>
        <Frame Source="Pages/FlashcardPage.xaml" />
    </DockPanel>
</Window>
